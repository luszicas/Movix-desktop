

@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Filmes";
}

<div class="container pb-5" style="padding-top: 140px;">

    <!-- Título + Botão Novo -->
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom border-secondary pb-3">
        <div>
            <h6 class="text-uppercase text-info fw-bold mb-1" style="letter-spacing: 2px;">Administração</h6>
            <h1 class="fw-bold text-white mb-0">Filmes</h1>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-info shadow-lg text-dark fw-bold">
                <i class="bi bi-plus-lg me-2"></i> Novo Filme
            </a>
        </div>
    </div>


    <!-- Card da tabela -->
    <div class="card border-0 shadow-lg overflow-hidden bg-dark">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-white">
                    <thead class="bg-black text-info">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small fw-bold border-0">Título</th>
                            <th class="py-3 text-uppercase small fw-bold border-0">Ano</th>
                            <th class="py-3 text-uppercase small fw-bold border-0">Gênero</th>
                            <th class="py-3 text-uppercase small fw-bold border-0">Classificação</th>
                            <th class="pe-4 py-3 text-end text-uppercase small fw-bold border-0">Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var f in Model)
                        {
                            <tr>
                                <!-- Título -->
                                <td class="ps-4 py-3 fw-bold">@f.Titulo</td>

                                <!-- Ano -->
                                <td class="py-3 text-muted fw-semibold">@f.Ano</td>

                                <!-- Gênero com badge -->
                                <td class="py-3">
                                    <span class="badge bg-info text-dark px-3 py-2 rounded-pill shadow-sm">
                                        @(f.Genero != null ? f.Genero.Nome : "-")
                                    </span>
                                </td>

                                <!-- Classificação como badge -->
                                <td class="py-3">
                                    <span class="badge bg-secondary px-3 py-2 rounded-pill shadow-sm">
                                        @(f.Classificacao != null ? f.Classificacao.Nome : "-")
                                    </span>
                                </td>

                                <!-- Ações com ícones -->
                                <!-- Ações com ícones -->
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group shadow-sm">

                                        <a asp-action="Details" asp-route-id="@f.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@f.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@f.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </a>

                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <div class="card-footer bg-black border-0 py-3 ps-4 d-flex justify-content-between align-items-center">
                <small class="text-muted fw-bold">Total: @Model.Count() registros</small>
            </div>

        </div>
    </div>

</div>
