@model Movix.Web.Areas.Admin.Models.PagedClassificacao
@using Movix.Web.Areas.Admin.Models

@{
    ViewData["Title"] = "Classificações";
    var f = (ClassificacaoListFilter)ViewBag.Filter;
    var totalPages = Math.Max(1, (int)Math.Ceiling((double)Model.Total / Math.Max(1, Model.PageSize)));
}

<div class="container pb-5" style="padding-top: 140px;">

    <!-- Título + Botão Novo -->
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom border-secondary pb-3">
        <div>
            <h6 class="text-uppercase text-info fw-bold mb-1" style="letter-spacing: 2px;">Administração</h6>
            <h1 class="fw-bold text-white mb-0">Classificações</h1>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-info shadow-lg text-dark fw-bold">
                <i class="bi bi-plus-lg me-2"></i> Nova Classificação
            </a>
        </div>
    </div>


    <!-- Barra de pesquisa -->
    <div class="row mb-4 justify-content-center">
        <div class="col-md-8">
            <form method="get">
                <div class="search-container shadow-sm d-flex">
                    <input type="text" name="Q" class="form-control search-input bg-dark text-white"
                           placeholder="Pesquisar classificação..."
                           value="@f.Q" />

                    <button type="submit" class="btn search-btn btn-info">
                        <i class="bi bi-search text-dark"></i>
                    </button>

                    @if (!string.IsNullOrEmpty(f.Q))
                    {
                        <a asp-action="Index" class="btn clear-btn btn-danger" title="Limpar pesquisa">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>


    <!-- Feedback -->
    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success shadow">@ok</div>
    }
    @if (TempData["error"] is string err)
    {
        <div class="alert alert-danger shadow">@err</div>
    }


    <!-- Card da tabela -->
    <div class="card border-0 shadow-lg overflow-hidden bg-dark">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-white">
                    <thead class="bg-black text-info">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small fw-bold border-0">Nome</th>
                            <th class="pe-4 py-3 text-end text-uppercase small fw-bold border-0">Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var r in Model.Items)
                        {
                            <tr>
                                <td class="ps-4 py-3 fw-bold">@r.Nome</td>

                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@r.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("ADMIN") || User.IsInRole("Administrador"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@r.Id"
                                               class="btn btn-sm btn-outline-danger"
                                               title="Excluir">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-secondary ps-4 py-3">Nenhuma classificação encontrada.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-black border-0 py-3 ps-4 d-flex justify-content-between align-items-center">
                <small class="text-muted fw-bold">Total: @Model.Total registros</small>
            </div>

        </div>
    </div>

</div>
