@model Movix.Web.Areas.Admin.Models.GeneroEditVm

@{
    ViewData["Title"] = "Novo Gênero";
}

<div class="container" style="padding-top: 140px;">

    <!-- Título + voltar -->
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom border-secondary pb-3">
        <div>
            <h6 class="text-uppercase text-info fw-bold mb-1" style="letter-spacing: 2px;">
                Administração
            </h6>
            <h1 class="fw-bold text-white mb-0">Novo Gênero</h1>
        </div>

       
    </div>


    <!-- Card -->
    <div class="card bg-dark border-0 shadow-lg rounded-4 p-4">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <partial name="_Form" />

            <div class="mt-4 d-flex justify-content-end">
                <button class="btn btn-success fw-bold shadow" type="submit">
                    <i class="bi bi-check-lg me-1"></i> Salvar
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
